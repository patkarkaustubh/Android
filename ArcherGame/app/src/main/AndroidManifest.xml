<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kaustubh.archergame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>
        <activity


            android:name="com.example.kaustubh.archergame.ChangeMode"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kaustubh.archergame.MainActivity" />

        </activity>
        <activity

            android:name="com.example.kaustubh.archergame.SpriteSheetAnimation"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kaustubh.archergame.ChangeMode" />

        </activity>
        <activity

            android:name="com.example.kaustubh.archergame.MediumMode"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kaustubh.archergame.ChangeMode" />

        </activity>
        <activity

            android:name="com.example.kaustubh.archergame.Decision"
            android:parentActivityName=".MainActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.kaustubh.archergame.SpriteSheetAnimation" />

        </activity>
    </application>

</manifest>